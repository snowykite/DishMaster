html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/common.css')
    link(rel='stylesheet', href='/stylesheets/signup-login.css')
    link(rel='stylesheet', href='/stylesheets/forms.css')
    script(src="/scripts/jquery-3.3.1.min.js")
    script(src="/scripts/forms.js")
  body
    .bg-holder
      .form
        ul.tab-group
          li.tab
            a(href="signup") Sign Up
          li.tab.active
            a(href="login") Log In
        .tab-content
          #signup
            h1 Welcome Back!
            form(action="/" method="post")
              .field-wrap
                label
                  | Email Address
                  span.req *
                input(type="email" required="" autocomplete="off")
              .field-wrap
                label
                  | Password
                  span.req *
                input(type="password" required="" autocomplete="off")
              p.forgot
                a(href="#") Forgot Password?
              button.button.button-block Log In
doctype html
html
	head
		title Dish Master
		link(rel="stylesheet" href="/stylesheets/bootstrap.css")
		link(rel="stylesheet" href="/stylesheets/common.css")
		link(rel="stylesheet" href="/stylesheets/home.css")
		link(rel="stylesheet" href="/stylesheets/add-dishes.css")
		link(rel="stylesheet" href="/stylesheets/jquery-ui.min.css")
		link(rel="stylesheet" href="/stylesheets/jquery-ui.theme.css")
		script(src="/library/jquery-3.3.1.min.js")
		script(src="/library/bootstrap.bundle.js")
		script(src="/library/jquery-ui.min.js")
		script(src="/scripts/resizable.js")
		script(src="/scripts/addDish.js")
	body
		nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
			a#dms-logo.navbar-brand(href="#") DM
			.collapse.navbar-collapse
				ul.navbar-nav.mr-auto
					li.nav-item
						a.nav-link(href="/home") Home
					li.nav-item.active
						a.nav-link(href="/addDish") Add Dish
					li.nav-item
						a.nav-link(href="#") Find
					li.nav-item
						a.nav-link(href="#") Bookmark
				form.form-inline.my-2.my-lg-0
					input.form-control.mr-sm-2(type="search" placeholder="Search" aria-label="Search")
					button.btn.btn-outline-info.my-2.my-sm-0(type="submit") Search
		.dms-home-header
			h1.dms-home-header-txt Your Next Meal
		.container
			.row
				.dms-main-content.col-md-12
					h3 Dish Tags
					div
						.dms-tag
							span Spicy
						.dms-tag
							span Expensive
						.dms-tag
							span Chinese
						.dms-tag
							span Japanese
						.dms-tag
							span Indian
					#selectedTags.resizeMe
						span
						| All Selected Tags
						.tags-container
			.row
				.dms-main-content.col-md-12
					form#newDishForm
						h3 Dish Details
						.dms-input-container
							label.form-check-label(for="dishNameInput") Dish Name:
							input#dishNameInput(name="dishName" type="text" required="" autocomplete="off")

						.dms-input-container
							label.form-check-label(for="restaurantInput") Restaurant Name:
							input#restaurantInput(name="restaurantName" type="text" required="" autocomplete="off")
						
						.dms-input-container
							label.form-check-label(for="dateInput") Tasted Date:
							input#dateInput.dms-date-picker(name="dateTasted" type="text" required="" autocomplete="off")
			.row
				.dms-main-content.col-md-12
					button.btn.btn-info(type="button") Reset
					button.btn.btn-info(type="button") Confirm


		.dms-footer.footer
			.container
				p Footer

		#confirmDialog(title="Dish Details")
			div 
				p Dish Label: 
				.tags-container
			div
				p Dish Name:
				span#dishNameConfirm
			div
				p Restaurant Name:
				span#restaurantConfirm
			div
				p Tasted Date:
				span#dateConfirm


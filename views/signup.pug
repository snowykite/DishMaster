html
  head
    title
    link(rel="stylesheet" href="/stylesheets/common.css")
    link(rel="stylesheet" href="/stylesheets/signup-login.css")
    link(rel="stylesheet" href="/stylesheets/forms.css")
    script(src="/scripts/jquery-3.3.1.min.js")
    script(src="/scripts/forms.js")
        script(src="/scripts/ajaxHandler.js")
  body
    .bg-holder
      .form
        ul.tab-group
          li.tab.active
            a(href="signup") Sign Up
          li.tab
            a(href="login") Log In
        .tab-content
          #signup
            h1 Join Dish Master Now!
            form(action="/signup" method="post")
              .top-row
                .field-wrap
                  label
                    | First Name
                    span.req *
                  input#firstname(type="text" required="" autocomplete="off")
                .field-wrap
                  label
                    | Last Name
                    span.req *
                  input#lastname(type="text" required="" autocomplete="off")
              .field-wrap
                label
                  | Email Address
                  span.req *
                input#email(type="email" required="" autocomplete="off")
              .field-wrap
                label
                  | Password
                  span.req *
                input#password(type="password" required="" autocomplete="off")
              button#sign-up-btn.button.button-block(type="submit") Get Started
